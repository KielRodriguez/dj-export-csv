<h1>Listado de libro</h1>
<hr />
<div>
    <button class="backgroun-blue">Exportar CSV</button>
    <button class="backgroun-red">Exportar SPREADSHEET</button>
</div>
<table>
    <tr>
        <th>titulo</th>
        <th>autor</th>
        <th>editorial</th>
        <th>genero</th>
    </tr>
    <% @books.each do |book|%>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.publisher %></td>
            <td><%= book.genre %></td>
        </tr>
    <% end %>
</table>

